<h1 class="text-center py-5">Your past and upcoming events created </h1>

<%= link_to  'Back', root_path %>

<h2 class="text-center text-muted"> Your Upcoming Events </h2>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

 <tbody>
    
    <% @events.each do |event| %>


      <% if current_user %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <% if Time.now > event.date %>
          <td> available </td>
        <% else %>
          <td><%= Enrollment.where(status: event.id).count %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
      </tr>
      <% end %>
    
   
  </tbody>

<% end %>
</table>

<h2 class="text-center text-muted"> Your Past Events </h2>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

 <tbody>
    
    <% @events.each do |event| %>
      <% if current_user %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <% if Time.now < event.date %>
          <td> Not available </td>
        <% else %>
          <td><%= Enrollment.where(status: event.id).count %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
        <% if event.user_id == current_user.id %>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
      
    
    <% end %>
  </tbody>

<% end %>
</table>


<h2 class="text-center text-muted"> Created Events </h2>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
  <% @all_events.each do |event| %>
      <tr>
       <td><%= event.name%></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
  <% end %>

  </tbody>
</table>
